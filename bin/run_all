#!/bin/bash
if [ "$#" -ne 4  ]; then
    echo "USAGE: run_all [script] [directory] [n_jobs] [logdir]"
    exit 1
fi
JOBS=$3
if [ $JOBS -gt 1 ]; then
    JOB_BASH=$( dirname $( readlink -f $0 ) )/job
    SCRIPT="$JOB_BASH $1"
else
    SCRIPT="$1"
fi
echo $SCRIPT
FOLDER=$2
LOGDIR=$4
parallel --results $LOGDIR -j $JOBS $SCRIPT ::: `find $FOLDER -type f  -name "*.yaml" | sort` &
